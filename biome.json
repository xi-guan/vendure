{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 110,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded"
    }
  },
  "linter": {
    "enabled": false
  },
  "files": {
    "ignore": [
      "**/generated*",
      "**/*.d.ts",
      "**/node_modules",
      "**/dist",
      "**/.next",
      "/packages/ui-devkit/scaffold/**/*",
      "/packages/dev-server/load-testing/**/*",
      "/docs/layouts/**/*"
    ]
  }
}
